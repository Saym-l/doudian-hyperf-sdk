{
    "name": "doudian/hyperf-sdk",
    "description": "抖店开放平台 PHP SDK for Hyperf Framework - 支持协程、依赖注入、连接池的高性能 SDK",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "doudian",
        "douyin",
        "hyperf",
        "swoole",
        "sdk",
        "coroutine",
        "e-commerce",
        "api"
    ],
    "homepage": "https://github.com/Saym-l/doudian-hyperf-sdk",
    "support": {
        "issues": "https://github.com/Saym-l/doudian-hyperf-sdk/issues",
        "source": "https://github.com/Saym-l/doudian-hyperf-sdk"
    },
    "authors": [
        {
            "name": "Saym-l",
            "email": "1769941690@qq.com",
            "homepage": "https://your-website.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "hyperf/framework": "^3.0",
        "hyperf/di": "^3.0",
        "hyperf/config": "^3.0",
        "hyperf/guzzle": "^3.0",
        "hyperf/logger": "^3.0",
        "hyperf/pool": "^3.0",
        "psr/container": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0",
        "mockery/mockery": "^1.4",
        "swoole/ide-helper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Doudian\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DoudianTest\\": "tests/"
        }
    },
    "extra": {
        "hyperf": {
            "config": "Doudian\\ConfigProvider"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
} 